<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="containe">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Crie uma conta ou faça seu login abaixo</p>
    
      <div class="row">
        <div class="col-lg">
          
          <h4>Cadastro</h4>
          <p>Se você ainda não possui conta, preencha os campos abaixo:</p>

          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value={ %= csrfToken % }>
            <div class="mb-3">
              <label>E-mail</label>
              <input type="email" class="form-control" name="email">            
            </div>
            <div class="mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">            
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>
          
        </div>

        <div class="col-lg">
          
          <h4>Login</h4>
          <p>Se você possui conta, faça seu login nos campos abaixo:</p>

          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value={ %= csrfToken % }>
            <div class="mb-3">
              <label>E-mail</label>
              <input type="email" class="form-control" name="email">            
            </div>
            <div class="mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">            
            </div>
            <button type="submit" class="btn btn-primary">Acessar conta</button>
          </form>

        </div>
      </div>
    
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer') %>
    